<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Brain Training Contact</title>

    <link rel="icon" type="image/x-icon" href="https://images6.alphacoders.com/555/555590.jpg" />
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,700,500' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>

    <link href="~/Content/mobile-menu.css" rel="stylesheet" />
    <link href="~/Fonts/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <div id="main-wrapper">
        <div id="preloader">
            <div id="status">
                <div class="status-mes"></div>
            </div>
        </div>

        <div class="uc-mobile-menu-pusher">

            <div class="content-wrapper">
                <nav class="navbar m-menu navbar-default navbar-fixed-top">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                                    data-target="#navbar-collapse-1">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>

                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="navbar-brand" style="color:orange; font-weight:bolder;">Hey @BrainTraining.Controllers.ContactController.Name! </a>
                                using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutform" }))
                                { <a href="javascript:document.getElementById('logoutform').submit()" class="logout">Logout</a> }
                            }

                        </div>

                        <div class="collapse navbar-collapse" id="#navbar-collapse-1">

                            <ul class="nav navbar-nav navbar-right main-nav">
                                <li><a href="~/Home" style="color:#31aae2; font-weight: bolder;">Home</a></li>
                                @if (!User.Identity.IsAuthenticated)
                                {
                                <li><a href="~/Account/Login" style="color:#31aae2; font-weight: bolder;">Account</a></li> }
                                @if (User.Identity.IsAuthenticated)
                                {
                                <li><a href="~/Account/MyProfile" style="color:#31aae2; font-weight: bolder;">My Profile</a></li>}
                                <li><a href="~/Contact" class="active" style="color:#31aae2; font-weight: bolder;">Contact</a></li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li class="dropdown m-menu-fw">
                                        <a href="#" data-toggle="dropdown" class="dropdown-toggle" style="color:#31aae2; font-weight: bolder;">
                                            Training
                                            <span><i class="fa fa-angle-down"></i></span>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <div class="m-menu-content">
                                                    <ul class="col-sm-3">
                                                        <li class="dropdown-header">Choose:</li>
                                                        <li><a href="~/Training/LeftOrRight">Left Or Right</a></li>
                                                        <li><a href="~/Training/MemoryPower">Memory Power</a></li>
                                                    </ul>
                                                </div>
                                            </li>
                                        </ul>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </nav>

                <section class="single-page-title">
                    <div class="container text-center">
                        <h2>Contact us</h2>
                    </div>
                </section>

                <section class="contact-form ptb-100">
                    <div class="container text-center">
                        <h2>We appreciate your feedbacks and ideas.<br>Please feel free to message us!</h2>

                        @using (Html.BeginForm("Contact", "Contact", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-md-8 col-md-offset-2">
                                    <form>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group user-name">
                                                    <label for="nameFive-first" class="sr-only">Name</label>
                                                    <input type="text" name="FirstName" class="form-control" required="" id="nameFive-first" placeholder="First Name">

                                                </div>

                                                <div class="form-group user-email">
                                                    <label for="emailFive" class="sr-only">Email</label>
                                                    <input type="email" name="EmailAddress" class="form-control" required="" id="emailFive" placeholder="Email Address">
                                                </div>


                                                <div class="form-group user-phone">
                                                    <label for="websiteOne" class="sr-only">Phone</label>
                                                    <input type="text" name="PhoneNumber" class="form-control" required="" id="websiteOne" placeholder="Phone">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group user-message">
                                                    <label for="messageOne" class="sr-only">Message</label>
                                                    <textarea class="form-control" name="Message" required="" id="messageOne" placeholder="Write Message"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Send Message</button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                </section>
                <label style="color:#06fc13; font-weight:bold; font-size:larger; text-align:center;">@ViewBag.msg</label>
                <div class="copyright-section" style="text-align: center;">
                    <div class="container clearfix">
                        <span class="copytext">Copyright &copy; 2018 | <a href="http://nqportfolio.azurewebsites.net" target="_blank">NQ Enterprises</a></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
    <script src="~/Scripts/smoothscroll.js"></script>
    <script src="~/Scripts/mobile-menu.js"></script>
    <script src="~/Scripts/FlexSlider/jquery.flexslider-min.js"></script>
    <script src="~/Scripts/scripts.js"></script>

</body>
</html>