@model BrainTraining.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Registration</title>

    <link rel="icon" type="image/x-icon" href="https://images6.alphacoders.com/555/555590.jpg" />
    <link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" href="~/Content/RegForm.css">
</head>

<body>
    @using (Html.BeginForm("Registration", "Account", FormMethod.Post, new { Class = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form">
            <div class="tab-content">
                <div id="signup">
                    <h1>Sign Up for Free</h1>
                    <div class="top-row">
                        <label class="text-danger">@ViewBag.ErrMsg</label>
                        <div class="field-wrap">
                            <label>
                                First Name<span class="req">*</span>
                            </label>
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { Type = "text" } })
                            <div style="text-align:center;"> @Html.ValidationMessageFor(model => model.FirstName, "", new { Class = "text-danger" })</div>
                        </div>

                        <div class="field-wrap">
                            <label>
                                Last Name<span class="req">*</span>
                            </label>
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { Type = "text" } })
                            <div style="text-align:center;"> @Html.ValidationMessageFor(model => model.LastName, "", new { Class = "text-danger" })</div>
                        </div>
                    </div>

                    <div class="field-wrap">
                        <label>
                            Email Address<span class="req">*</span>
                        </label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { Type = "email" } })
                        <div style="text-align:center;">@Html.ValidationMessageFor(model => model.Email, "", new { Class = "text-danger" })</div>
                        <div style="text-align:center;">@Html.ValidationMessage("EmailExists", new { Class = "text-danger" })</div>
                    </div>

                    <div class="field-wrap">
                        <label>
                            Password<span class="req">*</span>
                        </label>
                        @Html.EditorFor(model => model.PasswordHash, new { htmlAttributes = new { Type = "Password" } })
                        <div style="text-align:center;"> @Html.ValidationMessageFor(model => model.PasswordHash, "", new { Class = "text-danger" })</div>
                    </div>

                    <div class="field-wrap">
                        <label>
                            Confirm Password<span class="req">*</span>
                        </label>
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { Type = "Password" } })
                        <div style="text-align:center;">@Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { Class = "text-danger" })</div>
                    </div>

                    <button type="submit" class="button button-block">Get Started</button>
                </div>
            </div>
        </div>

        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/Scripts/RegFormJS.js"></script>
        <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
        <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    }
</body>
</html>