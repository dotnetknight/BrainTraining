@model BrainTraining.Models.Login

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>

    <link rel="icon" type="image/x-icon" href="https://images6.alphacoders.com/555/555590.jpg" />
    <link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" href="~/Content/RegForm.css">
</head>
<body>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { Class = "form" }))
    {
        <div class="form">
            <div class="tab-content">
                <div id="login">
                    <h1>Welcome Back!</h1>

                    <label class="text-danger">@ViewBag.Message</label>
                    <div class="field-wrap">
                        <label>
                            Email Address<span class="req">*</span>
                        </label>
                        @Html.EditorFor(model => model.Email, new { Type = "email" })
                        <div style="text-align:center;">  @Html.ValidationMessageFor(m => m.Email, "", new { Class = "text-danger" })</div>
                    </div>

                    <div class="field-wrap">
                        <label>
                            Password<span class="req">*</span>
                        </label>
                        @Html.EditorFor(model => model.Password, new { Type = "password" })
                        <div style="text-align:center;"> @Html.ValidationMessageFor(m => m.Password, "", new { Class = "text-danger" })</div>
                    </div>
                    <p class="forgot"><a href="#">Forgot Password?</a></p>

                    <button class="button button-block">Log In</button>

                </div>
            </div>
        </div>
        <lablel style="color:red;">Didn't have an account? </lablel><a class="RegistrationLink" href="~/Account/Registration">Register here</a>
       
         <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/Scripts/RegFormJS.js"></script>
        <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    }
</body>
</html>